<p id="notice"></p>

<h1>Bookings</h1>
<table>
  <thead>
    <tr>
      <th>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspPrice</th>
      <th>&nbsp&nbspDuration</th>
      <th>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspRoom</th>
      <th>Location</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <h2>Search</h2>
  <div class="searchingclass">
    <form class="search"
    <%= form_for "", url: bookings_path, role: "search", method: :get do %>
    <%= text_field_tag :search, @search_term, placeholder: "Search..." %>
    <%= submit_tag "Search" %>
    <% end %>
    </form>
  </div>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.price %></td>
        <td><%= booking.duration %></td>
        <td><%= booking.room %></td>
        <td><%= booking.location %></td>
        <td><%= booking.user_id %></td>
        <td><%= link_to 'Show', booking %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Delete', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    <td><%= link_to 'New Booking', new_booking_path %></td>
  </tbody>
</table>

<br>
